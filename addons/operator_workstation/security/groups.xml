        </record>

        <!-- Админ -->
        <record id="base.user_admin" model="res.users">
            <field name="name">Admin</field>
            <field name="active">True</field>
            <field name="groups_id"
                eval="[(6, 0, [ref('base.group_user'), ref('group_production_manager')])]" />
        </record>

        <!-- Операторы -->
